<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>Viewing Party Lite</h1>
    <%= link_to "Home", "/", method: :get %>
    <%= yield %>
  </body>

  <% if flash[:alert] %>
      <div id="alert">
         <h3><%= flash[:alert] %> </h3>
      </div>
  <% end %>

  <% if flash[:success] %>
      <div id="success">
         <h3><%= flash[:success] %> </h3>
      </div>
  <% end %>

  <% if flash[:error] %>
      <div id="error">
         <h3><%= flash[:error] %> </h3>
      </div>
  <% end %>
</html>
